{
  "name": "payload-boiler-room",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "preinstall": "npx only-allow pnpm",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation eslint .",
    "lint:debug": "eslint . --debug",
    "lint:debug:prettier": "pnpm dlx eslint-config-prettier src/app/layout.tsx",
    "lint:inspector": "pnpm dlx @eslint/config-inspector@latest",
    "lint:nextlint": "next lint",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "test": "vitest",
    "test:browser": "vitest --workspace=vitest.workspace.browser.ts",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui --coverage",
    "typecheck": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@payloadcms/db-sqlite": "^3.35.1",
    "@payloadcms/next": "^3.35.1",
    "@payloadcms/payload-cloud": "^3.35.1",
    "@payloadcms/richtext-lexical": "^3.35.1",
    "cross-env": "^7.0.3",
    "graphql": "^16.11.0",
    "next": "15.3.1",
    "payload": "^3.35.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.1.4",
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.1",
    "@next/eslint-plugin-next": "^15.3.1",
    "@playwright/test": "^1.52.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/eslint__eslintrc": "^3.3.0",
    "@types/node": "^22.15.2",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/browser": "^3.1.2",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/ui": "^3.1.2",
    "eslint": "^9.25.1",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "19.1.0-rc.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.0.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tw-animate-css": "^1.2.8",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.31.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2",
    "vitest-browser-react": "^0.1.1"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "packageManager": "pnpm@^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "msw",
      "sharp",
      "unrs-resolver"
    ],
    "overrides": {
      "file-type": "19.3.0"
    }
  }
}
